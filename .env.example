# =========================================
# CONFIGURACIÓN CHATBOT IA MULTI-PROVEEDOR
# =========================================

# === Core ===
ENVIRONMENT=production
SECRET_KEY=change-me-to-secure-random-string
LOG_LEVEL=INFO
PORT=5001

# =========================================
# PROVEEDOR DE IA (cambiar para alternar)
# =========================================
# Opciones: openai | gemini | ollama
AI_PROVIDER=gemini

# === OpenAI Configuration ===
OPENAI_API_KEY=sk-tu_api_key_aqui
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# === Google Gemini Configuration ===
GEMINI_API_KEY=tu_api_key_aqui
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_EMBEDDING_MODEL=gemini-embedding-001

# === Ollama Configuration ===
# Local: http://host.docker.internal:11434
# Cloud: https://api.ollama.com
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama2
OLLAMA_EMBEDDING_MODEL=embeddinggemma
# Solo para Ollama Cloud. Dejar vacío para uso local:
OLLAMA_API_KEY=

# === WhatsApp Business API ===
TOKEN_WHATSAPP=EAAB...tu_token_aqui
PHONE_NUMBER_ID=123456789012345
WHATSAPP_VERIFY_TOKEN=E23431A21A991BE82FF3D79D5F1F8
WHATSAPP_WEBHOOK_SECRET=tu_webhook_secret

# === Telegram Bot ===
TELEGRAM_TOKEN=123456:ABCDEF...tu_bot_token_aqui

# === RAG (Retrieval Augmented Generation) ===
RAG_ENABLED=true
CHROMA_HOST=chroma
CHROMA_PORT=8000

# Configuración de búsqueda RAG
RAG_TOP_K=5
RAG_MIN_SIMILARITY=0.7
RAG_CHAT_TOP_K=5
RAG_GLOBAL_MIN_SIMILARITY=0.3

# === Web Search (opcional) ===
SERPAPI_KEY=tu_serpapi_key

# === Database ===
# SQLite (legacy)
# DATABASE_URL=sqlite:///./openIAService/local/contextos.db

# MySQL (Docker compose)
DATABASE_URL=mysql+pymysql://chatbot_user:chatbot_pass@mysql:3306/chatbot_ia
MYSQL_DATABASE=chatbot_ia
MYSQL_USER=chatbot_user
MYSQL_PASSWORD=chatbot_pass
MYSQL_ROOT_PASSWORD=root_pass
MYSQL_HOST_PORT=3307

# === Optimizaciones ===
FAST_ANSWER_ENABLED=True
AI_TIMEOUT=120

